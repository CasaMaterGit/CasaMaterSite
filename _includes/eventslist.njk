<section class="home-section reveal">
  <div class="container">

    <div class="events-list">
      {%- for event in eventslist | reverse %}
        <article class="event-card">
          <a href="{{ event.url }}">
            {% if event.data.image %}
              <img src="{{ event.data.image }}" alt="{{ event.data.title }}">
            {% endif %}
            <h2>{{ event.data.title }}</h2>
          </a>
          <time class="event-date" datetime="{{ event.date | htmlDateString }}">
            {{ event.date | readableDate("dd 'de' LLLL yyyy") }}
          </time>
          {% if event.data.description %}
            <p class="event-description">{{ event.data.description }}</p>
          {% endif %}
        </article>
      {%- endfor %}
    </div>

  </div>
</section>
